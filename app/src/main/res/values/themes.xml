<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MindQuest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- 태초 컴퓨터 스타일 버튼 테마 -->
    <style name="PixelButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/pixel_button_background</item>
        <item name="android:textColor">@color/crt_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-monospace</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 태초 컴퓨터 스타일 텍스트뷰 테마 -->
    <style name="PixelTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/crt_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-monospace</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- 저질 8bit 스타일 다이얼로그 테마 -->
    <style name="PixelDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@drawable/pixel_dialog_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- 태초 컴퓨터 스타일 제목 텍스트뷰 -->
    <style name="PixelTitleText" parent="PixelTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/crt_green</item>
    </style>
    
    <!-- 태초 컴퓨터 스타일 작은 텍스트뷰 -->
    <style name="PixelSmallText" parent="PixelTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/crt_dark_green</item>
    </style>
</resources>
