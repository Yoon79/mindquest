<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crt_background">

    <!-- 오프닝 화면 -->
    <LinearLayout
        android:id="@+id/layoutOpening"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvOpeningNarration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opening_narration"
            android:textColor="@color/crt_green"
            android:textSize="20sp"
            style="@style/PixelTextView"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            style="@style/PixelButton"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- 게임 화면 -->
    <LinearLayout
        android:id="@+id/layoutGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 챕터 제목 -->
        <TextView
            android:id="@+id/tvChapterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="챕터 제목"
            android:textColor="@color/crt_green"
            android:textSize="24sp"
            style="@style/PixelTitleText"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/background_dark" />

        <!-- 텍스트 박스 -->
        <LinearLayout
            android:id="@+id/textBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="12dp"
            android:background="@drawable/text_box_background">

            <!-- NPC 이름 -->
            <TextView
                android:id="@+id/tvNpcName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NPC 이름"
                android:textColor="@color/crt_green"
                android:textSize="18sp"
                style="@style/PixelTitleText"
                android:layout_marginBottom="12dp" />

            <!-- 질문 -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="질문 텍스트"
                android:textColor="@color/crt_green"
                android:textSize="16sp"
                style="@style/PixelTextView"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- 선택지 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <Button
                android:id="@+id/btnChoice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지 1"
                style="@style/PixelButton"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btnChoice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지 2"
                style="@style/PixelButton"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btnChoice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택지 3"
                style="@style/PixelButton" />

        </LinearLayout>

    </LinearLayout>

    <!-- 엔딩 화면 -->
    <LinearLayout
        android:id="@+id/layoutEnding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEndingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="엔딩 제목"
            android:textColor="@color/crt_green"
            android:textSize="28sp"
            style="@style/PixelTitleText"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvEndingMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="엔딩 메시지"
            android:textColor="@color/crt_green"
            android:textSize="18sp"
            style="@style/PixelTextView"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/restart_text"
                style="@style/PixelButton"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/exit_text"
                style="@style/PixelButton" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
