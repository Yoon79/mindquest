<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/crt_green" />
            <stroke android:width="1dp" android:color="@color/crt_black" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/crt_dark_green" />
            <stroke android:width="1dp" android:color="@color/crt_black" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/crt_black" />
            <stroke android:width="1dp" android:color="@color/crt_green" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>
